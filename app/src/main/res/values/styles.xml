<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="full_screen_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:minWidth" type="dimen">600dp</item>
    </style>

    <style name="textViewDefault" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
    </style>

    <style name="textView12" parent="textViewDefault">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textView14" parent="textViewDefault">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textView16" parent="textViewDefault">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textView18" parent="textViewDefault">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textView20" parent="textViewDefault">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="editTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>